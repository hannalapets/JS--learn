// Типы данных

let userName = 'Марк'; //Строка. Если пишем кавычки, то имеем дело со строкой (текст) - одно слово, фраза, текст, хоть книга

let number = 30; //Число - если без кавычек. Если в кавычках, то строка.

let isMarried = true; //Логическое значение: true или false



//Динамическая типизацияю Не стоит злоупотреблять, нужно использовать понятный нейминг, чтобы было ожидаемо то, что там будет

let someVariable = 'Some value'; // сейчас someVariable типа String(Строка)
someVariable = 50; // сейчас someVariable имеет тип Number(Число)
someVariable = true; // суйчас someVariable имеет тип BooLean (логическое значение)

//Значение null. 
// "ничего", "пуст", "значение неизвестно" 
let age = 32;
age = null; //таким образом сбрасываем значение age

//Значение undefined. Значение не присвоено. Если переменная объявлена, но ей не присвоено значение, то значением будет undefined

//Щператор typeof (показывает тип )
const someName = true;
console.log(typeof someName);
