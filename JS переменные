// =================== 1. Подключение ===================
/*
- index.html
- файл main.js
- тег <script src></script>
- Запуск в liveServer
- команда console.log для вывода информации в консоль браузера
- комментарии
*/


console.log('Hello from JS!')


//let - может менять свое значение во время работы программы
let userName = 'Марк';
console.log(userName);

userName = 'Егор';
console.log(userName);


//const - не может менять свое значение во время работы программы
const yearOfBirth = 1990;
// yearOfBirth = 2000; //error

//Приобъявлении let - можем сначала писать без указания значения
let name, age;
name = 'Hanna';

//При объявлении const так делать нельзя, сразу ошибка. Нужно сразу задавать значение при создании константы. После ошибки программа дальше не работает

// var - старый формат объявления переменных, не рекомендуется к использованию. Имеет функциональную область видимости, а не блочную
function sum() {
    var name= 'Hanna'; //var будет существовать только внутри этой функции
}
console.log(name);

//Блок кода - объявляется только фигурными скобками {}
