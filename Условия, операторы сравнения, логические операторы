console.log(10 > 5) // true
console.log(20 > 80) // false

let result = 10 > 5
console.log(result);


console.log('5' == 5) //true не строгое сравнение, приравнивает строку к числу
console.log('5' === 5) // false строгое сравнение, видит разницу между строкой и числом (3 =)

let number = 5
console.log(number = 10); //true С одним = это операция присвоения. В переменной number теперь лежит 10, а не 5


/*

if (условие) {
    код, который будет выполнен, если условие верно
}

else {
    код, который будет выполнен, если условие не верно
}
*/

const time = 18;
if (time < 12) {
    console.log('Доброе утро');
} //выводится в консоли, если условие выполнено

else if (time >= 12 && time < 18) {
    console.log('Добрый день')
} else {
    console.log('Добрый вечер')
}

/* Логические операторы
&& - логическое И
|| - логическое ИЛИ
!true - логическое НЕ

*/
